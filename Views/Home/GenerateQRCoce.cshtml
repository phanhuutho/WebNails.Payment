@model Byte[]
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>QR Code</title>
        <style type="text/css">
            html, body {
                height: 100%;
                overflow: hidden;
            }
            body {
                display: flex;
                width: 100%;
                background: #000000;
                justify-content: center;
                align-items: center;
            }
            .container {
                width: 600px;
                height: 600px;
                margin: 0 auto;
            }
            .container #content {
                width: 100%;
                height: 100%;
                border: dashed 2px #CCCCCC;
                display: flex;
                justify-content: center;
                align-items: center;
            }
            .container #content img {
                max-width: 580px;
            }
        </style>
    </head>
    <body>
        <div class="container">
            <div id="content">
                @{
                    if (Model != null)
                    {
                        <img src="@String.Format("data:image/png;base64,{0}", Convert.ToBase64String(Model))" />
                    }
                }
            </div>
        </div>
    </body>
</html>